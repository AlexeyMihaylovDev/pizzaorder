// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]

  @@map("users")
}

enum UserRole {
  USER
  ADMIN
}

model Pizza {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  imageUrl    String
  category    String
  ingredients String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems OrderItem[]

  @@index([name])
  @@index([category])
  @@map("pizzas")
}

model Order {
  id        String      @id @default(uuid())
  userId    String
  status    OrderStatus @default(PENDING)
  total     Float
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       OrderItem[]
  address     Address?

  @@index([userId])
  @@index([status])
  @@map("orders")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  DELIVERED
  CANCELLED
}

model OrderItem {
  id       String @id @default(uuid())
  orderId  String
  pizzaId  String
  quantity Int
  price    Float

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  pizza Pizza @relation(fields: [pizzaId], references: [id])

  @@map("order_items")
}

model Address {
  id       String  @id @default(uuid())
  orderId  String  @unique
  street   String
  city     String
  zipCode  String
  country  String

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("addresses")
}
